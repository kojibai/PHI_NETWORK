{
  "cleanUrls": true,
  "trailingSlash": false,

  "routes": [
    { "handle": "filesystem" },

    { "src": "^/verify/([^/]+)$", "dest": "/api/verify?slug=$1" },

    { "src": "^/key/(.*)$", "dest": "/" },
    { "src": "^/cancel$", "dest": "/" },
    { "src": "^/dashboard$", "dest": "/" },
    { "src": "^/profile$", "dest": "/" },
    { "src": "^/success$", "dest": "/" },
    { "src": "^/s/([^/]+)$", "dest": "/" },

    { "src": "^/verifier$", "dest": "/verifier.html" },

    { "src": "^/(.*)$", "dest": "/" }
  ],

  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" },
        { "key": "Service-Worker-Allowed", "value": "/" }
      ]
    },
    {
      "source": "/assets/(.*)\\.(js|css|png|jpg|jpeg|gif|webp|svg|ico|woff2?)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
